
<div class="profile">
  <h2>Your Profile</h2>

  <div class="container profile-content">
    <div class="row">
      <div class="col-lg-12 col-xl-4 ">
        <div class="thumb avatar"> 
          <%= image_tag @business_profile.avatar.url %>
        </div>
        <div class="profile-links">
          <%= link_to 'Current Listings', "/current-listings" %><br>
          <%= link_to 'Past Listings', "/past-listings" %><br>
          <%= link_to 'Create a new listing', new_product_path %><br>
          <%= link_to 'Change Sign-Up Details', '/businesses/edit' %>
        </div>
      </div>
      <div class="col-lg-12 col-xl-8">

        <p>
          <strong>Name:</strong>
          <%= @business_profile.name %>
        </p>


        <p>
          <strong>Address:</strong>
        </p>

        <p>
          <%= @business_profile.street_line_one %><br>
          <% if @business_profile.street_line_two? %>
            <%= @business_profile.street_line_two %><br>
          <% end %>
          <%= @business_profile.suburb %></br>
          <%= @business_profile.state + ", " + @business_profile.postcode %><br>
          <%= @business_profile.country %>
        </p>

        <p>
          <strong>Abn:</strong>
          <%= @business_profile.abn %>
        </p>

        <p>
          <strong>Contact first name:</strong>
          <%= @business_profile.contact_first_name %>
        </p>

        <p>
          <strong>Contact last name:</strong>
          <%= @business_profile.contact_last_name %>
        </p>

        <p>
          <strong>Phone:</strong>
          <%= @business_profile.phone %>
        </p>

        
        <div class="edit-button">
          <%= link_to 'Edit Profile', edit_business_profile_path(@business_profile) %> 
        </div>
      </div>
    </div>
  </div>
</div>

