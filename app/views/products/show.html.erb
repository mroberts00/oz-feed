<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

  <div class='body'>
    <% if @product.image? %>
      <%= image_tag @product.image.url %>
    <% end %>
  </div>

  <h6><%= @product.price %>

<% if @product.sold %>
  <h6><%= link_to 'View/Download PDF', product_path(:format => :pdf) %></h6>
<% else %>
  <h6><%= link_to 'Delete', @product, method: :delete, data: { confirm: 'Are you sure?' } %></h6>
<% end %>
<%= link_to 'Edit', edit_product_path(@product) %> 
