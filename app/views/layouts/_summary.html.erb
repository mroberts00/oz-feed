<article>
    <h2>Please review your order</h2>
    <table>
        <%= render(@cart.line_items) %>

        <tr class"total_line">
            <td colspan="2">Total</td>
            <td class="price"><%= number_to_currency(@cart.total_price) %></td>
        </tr>
    </table>
    <%= button_to 'Cancel Order', @cart, method: :delete, data: { confirm: 'Are you sure?' } %>

</article>