<div class="donor-list">
    <h3>Latest Superstars!</h3>

    <ul>
        <% Order.order("created_at DESC").first(8).each do |order| %>
            <% if order.anonymous %>
                <% person = Donor.find(order.donor_id) %>
               <li> <%= "Anonymous donated $ #{order.price}" %></li>
            <% else %>
                <% person = Donor.find(order.donor_id) %>
                <li><%= "#{person.donor_profile.first_name} donated $ #{order.price}" %></li>
            <%end%>
        <% end %>
    </ul>
</div>
