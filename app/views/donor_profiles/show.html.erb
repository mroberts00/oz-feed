<p id="notice"><%= notice %></p>


<div class="profile">
  <h2>Your Profile</h2>

  <div class="container profile-content">
    <div class="row">
      <div class="col-lg-12 col-xl-4 ">
        <div class="thumb avatar"> 
          <%= image_tag @donor_profile.avatar.url %>
        </div>
        <div class="profile-links">
          <%= link_to 'Previous Orders', orders_path %><br>
          <%= link_to 'Change Sign-Up Details', '/donors/edit' %>
        </div>
      </div>
      <div class="col-lg-12 col-xl-8">

        <p>
          <strong>Name:</strong>
          <%= @donor_profile.first_name + " " + @donor_profile.last_name %>
        </p>


        <p>
          <strong>Address:</strong>
        </p>

        <p>
          <%= @donor_profile.street_line_one %><br>
          <% if @donor_profile.street_line_two? %>
            <%= @donor_profile.street_line_two %><br>
          <% end %>
          <%= @donor_profile.suburb %></br>
          <%= @donor_profile.state + ", " + @donor_profile.postcode %><br>
          <%= @donor_profile.country %>
        </p>

        <p>
          <strong>Phone number:</strong>
          <%= @donor_profile.phone_number %>
        </p>

        
        <div class="edit-button">
          <%= link_to 'Edit Profile', edit_donor_profile_path(@donor_profile) %> 
        </div>
      </div>
    </div>
  </div>
</div>