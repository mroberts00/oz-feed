<p id="notice"><%= notice %></p>

<h1>Donor Profiles</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Avatar</th>
      <th>Street line one</th>
      <th>Street line two</th>
      <th>Suburb</th>
      <th>Postcode</th>
      <th>State</th>
      <th>Country</th>
      <th>Phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donor_profiles.each do |donor_profile| %>
      <tr>
        <td><%= donor_profile.first_name %></td>
        <td><%= donor_profile.last_name %></td>
        <td><%= donor_profile.avatar %></td>
        <td><%= donor_profile.street_line_one %></td>
        <td><%= donor_profile.street_line_two %></td>
        <td><%= donor_profile.suburb %></td>
        <td><%= donor_profile.postcode %></td>
        <td><%= donor_profile.state %></td>
        <td><%= donor_profile.country %></td>
        <td><%= donor_profile.phone_number %></td>
        <td><%= link_to 'Show', donor_profile %></td>
        <td><%= link_to 'Edit', edit_donor_profile_path(donor_profile) %></td>
        <td><%= link_to 'Destroy', donor_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

